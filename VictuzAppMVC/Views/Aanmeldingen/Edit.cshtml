@model VictuzAppMVC.Models.Aanmeldingen

@{
    ViewData["Title"] = "Aanmelding Bewerken";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; font-weight: bold;">Aanmelding Bewerken</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="AanmeldingId" />

                <div class="mb-3">
                    <label asp-for="GebruikerId" class="form-label">Gebruiker</label>
                    <select asp-for="GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                    <span asp-validation-for="GebruikerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ActiviteitId" class="form-label">Activiteit</label>
                    <select asp-for="ActiviteitId" class="form-control" asp-items="ViewBag.ActiviteitId"></select>
                    <span asp-validation-for="ActiviteitId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AanmeldDatum" class="form-label">Aanmeld Datum</label>
                    <input asp-for="AanmeldDatum" type="date" class="form-control" />
                    <span asp-validation-for="AanmeldDatum" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Opslaan</button>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Terug naar overzicht</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
