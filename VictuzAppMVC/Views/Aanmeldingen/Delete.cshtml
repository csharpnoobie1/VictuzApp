@model VictuzAppMVC.Models.Aanmeldingen

@{
    ViewData["Title"] = "Aanmelding Verwijderen";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; font-weight: bold; color: #dc3545;">Aanmelding Verwijderen</h1>

    <h4 class="text-center mb-4" style="font-family: 'Poppins', sans-serif;">Weet je zeker dat je deze aanmelding wilt verwijderen?</h4>

    <div class="card shadow-sm p-4">
        <dl class="row mb-0" style="font-family: 'Poppins', sans-serif;">
            <dt class="col-sm-4">Aanmeld Datum:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.AanmeldDatum)</dd>

            <dt class="col-sm-4">Activiteit:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Activiteit.ActiviteitId)</dd>

            <dt class="col-sm-4">Gebruiker:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Gebruiker.GebruikerId)</dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" style="display: inline-block;">
            <input type="hidden" asp-for="AanmeldingId" />
            <button type="submit" class="btn btn-danger me-2">Verwijderen</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Terug naar overzicht</a>
    </div>
</div>
