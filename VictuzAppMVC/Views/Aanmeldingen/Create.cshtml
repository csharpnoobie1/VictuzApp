@model VictuzAppMVC.Models.Aanmeldingen

@{
    ViewData["Title"] = "Aanmelding Toevoegen";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; font-weight: bold;">Aanmelding Toevoegen</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="GebruikerId" class="form-label">Gebruiker</label>
                    <select asp-for="GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="ActiviteitId" class="form-label">Activiteit</label>
                    <select asp-for="ActiviteitId" class="form-control" asp-items="ViewBag.ActiviteitId"></select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Toevoegen</button>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Terug naar overzicht</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
