@model IEnumerable<VictuzAppMVC.Models.Gebruiker>

@{
    ViewData["Title"] = "Gebruikers";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; font-weight: bold;">Gebruikers</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary" style="font-family: 'Poppins', sans-serif;">Nieuwe Gebruiker Toevoegen</a>
    </div>

    <table class="table table-bordered table-striped table-hover align-middle" style="font-family: 'Poppins', sans-serif;">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Naam)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Wachtwoord)</th>
                <th>@Html.DisplayNameFor(model => model.IsBestuurslid)</th>
                <th>@Html.DisplayNameFor(model => model.Lidmaatschap)</th>
                <th class="text-center">Acties</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Naam)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            <span class="text-muted">••••••••</span> <!-- Wachtwoord weggelaten voor beveiliging -->
                        </td>
                        <td>
                            @if (item.IsBestuurslid)
                            {
                                <span class="badge bg-success">Ja</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Nee</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Lidmaatschap.LidmaatschapId)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.GebruikerId" class="btn btn-sm btn-warning mx-1">Bewerken</a>
                            <a asp-action="Details" asp-route-id="@item.GebruikerId" class="btn btn-sm btn-info mx-1 text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.GebruikerId" class="btn btn-sm btn-danger mx-1">Verwijderen</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Geen gebruikers gevonden.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
