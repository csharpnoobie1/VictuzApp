@model VictuzAppMVC.Models.Activiteiten

@{
    ViewData["Title"] = "Activiteit Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; font-weight: bold;">Activiteit Details</h1>

    <div class="card shadow-sm p-4">
        <dl class="row mb-0" style="font-family: 'Poppins', sans-serif;">
            <dt class="col-sm-4">Titel:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Titel)</dd>

            <dt class="col-sm-4">Datum:</dt>
            <dd class="col-sm-8">@Model.Datum.ToString("dd-MM-yyyy")</dd>

            <dt class="col-sm-4">Maximaal Aantal Deelnemers:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MaxDeelnemers)</dd>

            <dt class="col-sm-4">Beschrijving:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Beschrijving)</dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.ActiviteitId" class="btn btn-warning">Bewerken</a>
        <a asp-action="Index" class="btn btn-secondary">Terug naar overzicht</a>
    </div>
</div>
