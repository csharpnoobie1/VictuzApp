@model IEnumerable<VictuzAppMVC.Models.Activiteiten>

@{
    ViewData["Title"] = "Activiteiten";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; font-weight: bold;">Activiteiten</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary" style="font-family: 'Poppins', sans-serif;">Nieuwe Activiteit Toevoegen</a>
    </div>

    <table class="table table-striped table-hover align-middle" style="font-family: 'Poppins', sans-serif;">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titel)</th>
                <th>@Html.DisplayNameFor(model => model.Datum)</th>
                <th>@Html.DisplayNameFor(model => model.MaxDeelnemers)</th>
                <th>@Html.DisplayNameFor(model => model.Beschrijving)</th>
                <th class="text-center">Acties</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Titel)</td>
                        <td>@item.Datum.ToString("dd-MM-yyyy")</td>
                        <td>@Html.DisplayFor(modelItem => item.MaxDeelnemers)</td>
                        <td>@Html.DisplayFor(modelItem => item.Beschrijving)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ActiviteitId" class="btn btn-sm btn-warning mx-1">Bewerken</a>
                            <a asp-action="Details" asp-route-id="@item.ActiviteitId" class="btn btn-sm btn-info mx-1 text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ActiviteitId" class="btn btn-sm btn-danger mx-1">Verwijderen</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Geen activiteiten gevonden.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
